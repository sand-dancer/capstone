{
   "kind":"Deployment",
   "apiVersion":"apps/v1",
   "metadata":{
      "name":"Rolling deployment",
      "labels":{
         "app":"rolling1"
      }
   },
   "spec":{
      "replicas":1,
      "selector":{
         "matchLabels":{
            "app":"rolling1"
         }
      },
      "template":{
         "metadata":{
            "labels":{
               "app":"javaapp"
            }
         },
         "spec":{
            "containers":[
               {
                  "name":"rolling1",
                  "image":"jarmanr/capstone:latest",
                  "ports":[
                     {
                        "name":"java-server",
                        "containerPort":8080
                     }
                  ]
               }
            ]
         }
      }
   }
}
